<main>
    <h1>Edit Portfolio Item</h1>
  
    <form action="/blog/portfolio/edit/<%= portfolioItem._id %>" method="POST">
      <div>
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" value="<%= portfolioItem.title %>" required>
      </div>
      <div>
        <label for="description">Description:</label>
        <textarea id="description" name="description" required><%= portfolioItem.description %></textarea>
      </div>
      <div>
        <label for="images">Images (comma-separated URLs):</label>
        <input type="text" id="images" name="images" value="<%= portfolioItem.images.join(', ') %>" required>
      </div>
      <button type="submit">Update</button>
    </form>
  </main>
  